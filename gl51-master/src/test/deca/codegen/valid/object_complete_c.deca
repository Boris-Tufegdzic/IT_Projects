class Entity {
    //position of entity
    float x = 0;
    float y = 0;
    float z = 0;
    protected int entityUUID = 123456789;

    void setCoordinate(float x, float y, float z) {
        this.x = x;
        this.y = y;
        this.z = z;
    }

    void toString(){
        println("--------toString Entity ------------");
        println(entityUUID);
        println("------------------------------");
    }
}

class Player extends Entity{
    float coin;
    boolean isvip = false; //bug si on met isVip car isVip method

    void setCoin(float coin) {
        this.coin = coin;
    }

    void setVip(boolean b) {
        this.isvip = b;
    }

    float getCoins(){
        return this.coin;
    }

    boolean isVip(){
        return this.isvip;
    }

    void increaseCoin(float coin) {
        this.coin = this.coin + coin;
    }

    //Override toString
    void toString() {
        println("-----toString Player --------");
        println(entityUUID); //entityUUID accessible because protected, super optionnel ? en java oui
        println(getCoins());
        println("------------------------------");

    }
}

class Monster extends Entity {

    //Override toString
    void toString() {
        println("----- toString Monster --------");
        println(entityUUID);
        println("-----------------------------");
    }
}

